{
	"name": "bedstack-stripped",
	"title": "Bedstack (Stripped)",
	"description": "âš¡ Stripped version of Bedstack for rapid prototyping",
	"type": "module",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"dev": "bun run --watch src/index.ts",
		"build": "bun build src/index.ts --outdir dist --target=bun --sourcemap",
		"preview": "bun run dist/index.js",
		"fix": "biome check --write",
		"check": "biome check",
		"check:errors": "biome check --diagnostic-level=error",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf node_modules",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:studio": "drizzle-kit studio",
		"db:seed": "bun run drizzle/seed.ts",
		"db:reset": "bun run drizzle/reset.ts"
	},
	"dependencies": {
		"@elysiajs/static": "^1.3.0",
		"@elysiajs/swagger": "^1.3.0",
		"@yolk-oss/elysia-env": "^3.0.0",
		"chalk": "^5.4.1",
		"drizzle-orm": "^0.44.2",
		"elysia": "^1.3.4",
		"http-status-codes": "^2.3.0",
		"jose": "^6.0.11",
		"radashi": "^12.5.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bun": "^1.2.15",
		"better-sqlite3": "^11.10.0",
		"drizzle-kit": "^0.31.1",
		"drizzle-seed": "^0.3.1",
		"typescript": "^5.8.3"
	},
	"module": "src/index.js"
}
